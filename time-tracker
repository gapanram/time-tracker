#!/usr/bin/env python3
import time

class TimeTracker:
    def __init__(self):
        self.start_time = None
        self.end_time = None

    def start(self):
        """Start the time tracker."""
        self.start_time = time.time()
        print("Timer started...")

    def stop(self):
        """Stop the time tracker and calculate elapsed time."""
        if self.start_time is None:
            print("Timer hasn't started yet!")
            return
        self.end_time = time.time()
        elapsed_time = self.end_time - self.start_time
        print(f"Timer stopped. Elapsed time: {self.format_time(elapsed_time)}")

    def format_time(self, seconds):
        """Format elapsed time to hours, minutes, seconds."""
        hours = seconds // 3600
        minutes = (seconds % 3600) // 60
        seconds = seconds % 60
        return f"{int(hours)}h {int(minutes)}m {int(seconds)}s"

    def get_elapsed_time(self):
        """Return the elapsed time as a string."""
        if self.start_time is None or self.end_time is None:
            return "Timer hasn't been stopped yet!"
        elapsed_time = self.end_time - self.start_time
        return self.format_time(elapsed_time)

if __name__ == "__main__":
    tracker = TimeTracker()

    while True:
        print("\nOptions:")
        print("1. Start Timer")
        print("2. Stop Timer")
        print("3. Get Elapsed Time")
        print("4. Exit")
        
        choice = input("Enter your choice: ")

        if choice == '1':
            tracker.start()
        elif choice == '2':
            tracker.stop()
        elif choice == '3':
            print(f"Elapsed Time: {tracker.get_elapsed_time()}")
        elif choice == '4':
            print("Exiting program.")
            break
        else:
            print("Invalid choice! Please try again.")
